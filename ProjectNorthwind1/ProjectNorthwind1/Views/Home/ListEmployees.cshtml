
@{
    ViewBag.Title = "Listing Employees";
}

<meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
<meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1.0, user-scalable=no" />


<link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.100.2/css/materialize.min.css">
<link href="~/MatSheet.css" rel="stylesheet" type="text/css" />

<nav>
    <div class="nav-wrapper">
        <a href="#" class="brand-logo center">Northwind</a>
        <!--<img src="IWLogo.jpg" alt="Main Logo" class="mlogo">-->
    </div>
</nav>
<br />
<br />

<div class="Bbutton">
    <a class="btn-floating btn-large waves-effect waves-light red" id="bacbutl" href="ListPage"><i class="material-icons">arrow_back</i></a>
</div>

<h2>Employees</h2>
<br />

<table class="mtable">
    <thead class="lhead">
        <tr>
            <th>Employee ID</th>
            <th>Last Name</th>
            <th>First Name</th>
            <th>Title</th>
            <th>Title of Courtesy</th>
            <th>Birth Date</th>
            <th>Hire Date</th>
            <th>Address</th>
            <th>City</th>
            <th>Region</th>
            <th>Postal Code</th>
            <th>Country</th>
            <th>Home Phone</th>
            <th>Extension</th>
            <th>Photo</th>
            <th>Notes</th>
            <th>ReportsTo</th>
        </tr>
    </thead>

        @foreach (var e in ViewBag.AListofEmployees)
        {
            <tr class="rowlist">
                <td>@e.EmployeeID</td>
                <td>@e.LastName</td>
                <td><a href="GetanEmployee?id=@e.EmployeeID">@e.FirstName</a></td>
                <td>@e.Title</td>
                <td>@e.TitleofCourtesy</td>
                <td>@e.BirthDate</td>
                <td>@e.HireDate</td>
                <td>@e.Address</td>
                <td>@e.City</td>
                <td>@e.Region</td>
                <td>@e.PostalCode</td>
                <td>@e.Country</td>
                <td>@e.HomePhone</td>
                <td>@e.Extension</td>
                <td>@e.Photo</td>
                <td>@e.Notes</td>
                <td>@e.ReportsTo</td>
            </tr>
        }
</table>

