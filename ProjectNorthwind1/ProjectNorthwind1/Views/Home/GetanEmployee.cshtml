
@{
    ViewBag.Title = "Associated Products";
}

<meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
<meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1.0, user-scalable=no" />


<link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.100.2/css/materialize.min.css">
<link href="~/MatSheet.css" rel="stylesheet" type="text/css" />

<nav>
    <div class="nav-wrapper">
        <a href="Index" class="brand-logo center">Northwind</a>
        <!--<img src="IWLogo.jpg" alt="Main Logo" class="mlogo">-->
    </div>
</nav>
<br />
<br />

<div class="Bbutton">
    <a class="btn-floating btn-large waves-effect waves-light red" id="bacbutl" href="ListEmployees"><i class="material-icons">arrow_back</i></a>
</div>

<h2>Selected Employee</h2>
<br />

<table class="mtable">
    <thead class="lhead">
        <tr>
            <th>Employee ID</th>
            <th>Last Name</th>
            <th>First Name</th>
            <th>Title</th>
            <th>Reports To</th>
        </tr>
    </thead>

        <tr>
            <td>@ViewBag.Employee.EmployeeID</td>
            <td>@ViewBag.Employee.LastName</td>
            <td>@ViewBag.Employee.FirstName</td>
            <td>@ViewBag.Employee.Title</td>
            <td>@ViewBag.Employee.ReportsTo</td>

        </tr>

</table>

<h3>Associated Orders</h3>
<br />

<table class="mtable" style="width: 75%;">
    <thead class="lhead">
        <tr>
            <th>Order ID</th>
            <th>Order Date</th>
            <th>Shipped Date</th>
            <th>Shipped Date</th>
            <th>Ship Address</th>
            <th>Ship City</th>
            <th>Ship Country</th>
        </tr>
    </thead>

    @foreach (var p in ViewBag.WhatWeWant)
    {
        <tr class="rowlist">
            <td>@p.OrderID</td>
            <td>@p.OrderDate</td>
            <td>@p.ShippedDate</td>
            <td>@p.ShipName</td>
            <td>@p.ShipAddress</td>
            <td>@p.ShipCity</td>
            <td>@p.ShipCountry</td>
        </tr>
    }
</table>

<footer class="page-footer" id="footer">
    <div class="container">
        <div class="row">
            <div class="col l6 s12">
                <h5 class="white-text">Created By Ivensky Watermann</h5>
                <p class="grey-text text-lighten-4">Everyone needs a Northwind Project.</p>
            </div>
        </div>
    </div>
    <div class="footer-copyright">
        <div class="container">
            © 2018 Copyright by Victor Czar Ivansky Inc.
        </div>
    </div>
</footer>

