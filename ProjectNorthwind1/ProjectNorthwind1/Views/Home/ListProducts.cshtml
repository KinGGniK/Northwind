
@{
    ViewBag.Title = "Listing Products";
}

<meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
<meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1.0, user-scalable=no" />


<link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.100.2/css/materialize.min.css">
<link href="~/MatSheet.css" rel="stylesheet" type="text/css" />

<nav>
    <div class="nav-wrapper">
        <a href="Index" class="brand-logo center">Northwind</a>
        <!--<img src="IWLogo.jpg" alt="Main Logo" class="mlogo">-->
    </div>
</nav>
<br />
<br />

<div class="Bbutton">
    <a class="btn-floating btn-large waves-effect waves-light red" id="bacbutl" href="ListPage"><i class="material-icons">arrow_back</i></a>
</div>

<h2>Products</h2>
<br />

<table class="mtable" style="width: 75%;">
    <thead class="lhead">
        <tr>
            <th>Product ID</th>
            <th>Product Name</th>
            <th>Supplier ID</th>
            <th>Category ID</th>
            <th>Quantity Per Unit</th>
            <th>Unit Price</th>
            <th>Units In Stock</th>
            <th>Units On Order</th>
            <th>Reorder Level</th>
            <th>Discontinued</th>
        </tr>
    </thead>

        @foreach (var p in ViewBag.AListofProducts)
        {
            <tr class="rowlist">
                <td>@p.ProductID</td>
                <td><a href="GetaProduct?id=@p.ProductID">@p.ProductName</a></td>
                <td>@p.SupplierID</td>
                <td>@p.CategoryID</td>
                <td>@p.QuanperUnit</td>
                <td>@p.UnitPrice</td>
                <td>@p.UnitsInStock</td>
                <td>@p.UnitsonOrder</td>
                <td>@p.ReorderLevel</td>
                <td>@p.Discontinued</td>
            </tr>
        }
</table>


